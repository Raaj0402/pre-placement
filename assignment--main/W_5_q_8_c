#include <stdio.h>

int findCelebrity(int **mat, int n) {
    int i = 0, j = n - 1;

    // Find candidate
    while (i < j) {
        if (mat[i][j] == 1) {
            i++;  // i knows j, i can't be celebrity
        } else {
            j--;  // i doesn't know j, j can't be celebrity
        }
    }

    int candidate = i;

    // Verify candidate
    for (int k = 0; k < n; k++) {
        if (k != candidate) {
            if (mat[candidate][k] == 1 || mat[k][candidate] == 0) {
                return -1;
            }
        }
    }

    return candidate;
}

int main() {
    int n = 3;

    // Creating 2D array dynamically
    int arr[3][3] = {
        {1, 1, 0},
        {0, 1, 0},
        {0, 1, 1}
    };

    // Pointers for the function
    int *mat[3];
    for (int i = 0; i < n; i++) {
        mat[i] = arr[i];
    }

    int celebrity = findCelebrity(mat, n);
    printf("%d\n", celebrity);  // Output: 1

    return 0;
}
