#include <stdio.h>

int findCelebrity(int **mat, int n) {
    int i = 0, j = n - 1;

    // Step 1: Find the candidate
    while (i < j) {
        if (mat[i][j] == 1) {
            // i knows j, so i can't be celebrity
            i++;
        } else {
            // i doesn't know j, so j can't be celebrity
            j--;
        }
    }

    int candidate = i;

    // Step 2: Verify the candidate
    for (int k = 0; k < n; k++) {
        if (k != candidate) {
            if (mat[candidate][k] == 1 || mat[k][candidate] == 0) {
                return -1;
            }
        }
    }

    return candidate;
}

